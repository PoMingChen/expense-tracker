<nav class="navbar navbar-light bg-light mb-4">
  <div class="container">
    <a href="/expense_tracker" class="navbar-brand">家庭記帳本</a>
    <a href="/logout" class="btn btn-outline-danger">登出</a>
  </div>
</nav>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 col-12 mx-auto">
      <h3 class="text-center">請修改你的支出</h3>
      <form action="/expense_tracker/{{record.id}}/edit" method="POST">
        <!-- Name Input -->
        <div class="mb-3">
          <label for="name" class="form-label">名稱<span class="text-danger">*</span>：</label>
          <input type="text" class="form-control" id="name" name="name" value="{{record.name}}" required>
        </div>

        <!-- Date Input -->
        <div class="mb-3">
          <label for="date" class="form-label">日期：</label>
          <input type="date" class="form-control" id="date" name="date" value="{{formatDate record.date}}" required>
        </div>

        <!-- Category Input -->
        <div class="mb-3">
          <label for="category" class="form-label">類別：</label>
          <select class="form-select" id="category" name="category" required>
            <option value="" {{#unless record.categoryId}}selected{{/unless}}>請選擇類別</option>
            <option value=1 {{#if (eq record.categoryId 1)}}selected{{/if}}>家居物業</option>
            <option value=2 {{#if (eq record.categoryId 2)}}selected{{/if}}>交通出行</option>
            <option value=3 {{#if (eq record.categoryId 3)}}selected{{/if}}>休閒娛樂</option>
            <option value=4 {{#if (eq record.categoryId 4)}}selected{{/if}}>餐飲食品</option>
            <option value=5 {{#if (eq record.categoryId 5)}}selected{{/if}}>其他</option>
          </select>

        </div>

        <!-- Amount Input -->
        <div class="mb-3">
          <label for="amount" class="form-label">金額<span class="text-danger">*</span>：</label>
          <input type="number" class="form-control" id="amount" name="amount" value="{{record.amount}}" required>
        </div>

        <!-- Submit Button -->
        <div class="text-center mt-4">
          <button type="submit" class="btn btn-warning">送出</button>
        </div>

      </form>
    </div>
  </div>
</div>