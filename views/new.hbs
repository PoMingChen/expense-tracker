<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 col-12 mx-auto">
      <h3 class="text-center">請輸入你的支出</h3>
      <form action="/expenses" method="POST">
        <!-- Name Input -->
        <div class="mb-3">
          <label for="name" class="form-label">名稱<span class="text-danger">*</span>：</label>
          <input type="text" class="form-control" id="name" name="name" required>
        </div>

        <!-- Date Input -->
        <div class="mb-3">
          <label for="date" class="form-label">日期：</label>
          <input type="date" class="form-control" id="date" name="date" value="2019-04-23" required>
        </div>

        <!-- Category Input -->
        <div class="mb-3">
          <label for="category" class="form-label">類別：</label>
          <select class="form-select" id="category" name="category" required>
            <option value="" selected>請選擇類別</option>
            <!-- You can dynamically populate these options from your database -->
            <option value="1">家居物業</option>
            <option value="2">交通出行</option>
            <option value="3">休閒娛樂</option>
            <option value="4">餐飲食品</option>
            <option value="5">其他</option>
            <!-- Add more categories as needed -->
          </select>
        </div>

        <!-- Amount Input -->
        <div class="mb-3">
          <label for="amount" class="form-label">金額<span class="text-danger">*</span>：</label>
          <input type="number" class="form-control" id="amount" name="amount" required>
        </div>

        <!-- Submit Button -->
        <div class="text-center mt-4">
          <button type="submit" class="btn btn-warning">新增支出</button>
        </div>
      </form>
    </div>
  </div>
</div>